<html>
<head>
  <title>Dots and Boxes </title>
  <link rel="stylesheet" href="/style.css">
  <link rel="stylesheet" href="/userStyles.css">
  <link rel="preconnect" href="https://fonts.gstatic.com">
  <link href="https://fonts.googleapis.com/css2?family=Poppins:wght@300&display=swap" rel="stylesheet">
  <meta name="viewport" content="width=device-width, initial-scale=1.0">
</head>
<body>

  <div id="titleBar">
    <h1>Dots and Boxes</h1>
  </div>

  <div class="container">
    <% if (error!=null) { %>
      <p id="errorMessage"><%= error.message %></p>
    <% } %>

    <form action="/" method="GET" class="joinForm wide" id="joinForm">
        <input type="text" placeholder="Room code" maxLength=25 name="code" id="joinFormRoomCode"/>
        <button class="button" id="joinButton"> Join Game </button>
        <button type="button" class="button" id="spectateButton"> Spectate Game </button>
    </form>

    <br>
    <% if (loggedIn!=true) { %>
      <a href="/login" class="button">Login</a>
      <a href="/register" class="button">Register</a>
    <% } else {%>
      <a href="/profile" class="button">View account</a>
    <% }%>

  </div>

  <script>
    document.getElementById("joinForm").addEventListener("submit", (e) => { //Go to users profile
      window.location.href="/play/"+document.getElementById("joinFormRoomCode").value;
      e.preventDefault();
    });
    document.getElementById("joinButton").addEventListener("click", (e) => {
      window.location.href="/play/"+document.getElementById("joinFormRoomCode").value;
    });
    document.getElementById("spectateButton").addEventListener("click", (e) => {
      window.location.href="/spectate/"+document.getElementById("joinFormRoomCode").value;
    });
  </script>
</body>
</html>
